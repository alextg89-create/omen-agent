# OMEN Environment Configuration

# ===================================
# SUPABASE INTEGRATION (OPTIONAL)
# ===================================
# Enable Supabase as data source for velocity tracking
# Set to 'true' to enable, 'false' or omit to use local storage only
OMEN_USE_SUPABASE=false

# Supabase connection credentials
# Required only if OMEN_USE_SUPABASE=true
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ===================================
# OMEN CONFIGURATION
# ===================================
# Maximum tier level for routing (1-3)
OMEN_MAX_TIER=1

# Allow execution of actions
OMEN_ALLOW_EXECUTION=false

# Use mock inventory data for testing
OMEN_USE_MOCKS=false

# Enable governance system
OMEN_GOVERNANCE_ENABLED=false

# ===================================
# LLM CONFIGURATION
# ===================================
# OpenAI API key for chat and explanations
OPENAI_API_KEY=sk-your-openai-key-here

# ===================================
# SERVER CONFIGURATION
# ===================================
# Port for Express server
PORT=3000

# JWT secret for authentication
JWT_SECRET=your-jwt-secret-change-in-production

# Node environment
NODE_ENV=development
